#!/usr/bin/env python3

#
# goal: find out if our devices are distributed evenly
#       among Bitbar's Docker hosts.
#

import argparse
import sys

try:
    from mozilla_bitbar_devicepool.docker_server_report import DockerServerReport
except ImportError:
    print("ERROR: Please install dependencies (`poetry install`)!")
    sys.exit(1)
#
parser = argparse.ArgumentParser()
# parser.add_argument("-c", "--config-file", help="config file to inspect")
parser.add_argument(
    "-v",
    "--verbose",
    action="store_true",
    dest="verbose",
    default=False,
    help="verbose mode",
)
args = parser.parse_args()
#
# dsr = DockerServerReport(config_path=args.config_file)
#

dsr = DockerServerReport()
dsr.main(args)
